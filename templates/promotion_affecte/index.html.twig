{% extends 'base.html.twig' %}

{% block title %}Promotion affecté{% endblock %}

{% block content %}
    <section id="container">
        <section id="main-content">
            <section class="wrapper">
                <h3><i class="fa fa-angle-right"></i> Gérer les promotions</h3>


                <div class="row mt">
                    <div class="col-md-12">
                        <div class="content-panel">
                            <table class="table table-striped table-advance table-hover">
                                <h4><i class="fa fa-angle-right"></i> Liste des promotions affectés</h4>
                                <div class="top-menu">
                                    <ul class="nav pull-right top-menu" class="btn btn-primary btn-sm">
                                        <li>
                                            <a class="logout"  href="{{ path("affecterPromotion") }}">Affecter Promotion</a>
                                        </li>
                                    </ul>
                                </div>
                                <br>
                                <br>
                                <br>
                                <hr>
                                <thead>
                                <tr>
                                    <th><i class="fa fa-bullhorn"></i> ID</th>
                                    <th class=" fa fa-edit"><i class="fa fa-question-circle"></i> Delai</th>
                                    <th><i class="fa fa-bookmark"></i> ID Utilisateur</th>
                                    <th><i class="fa fa-bookmark"></i> ID Promotion</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for promotionA in promotionAff %}
                                    <tr>
                                        <td>
                                            <a href="basic_table.html#">{{ promotionA.id }}</a>
                                        </td>
                                        <td class="hidden-phone">{{ promotionA.delai|date('d-m-Y') }}</td>
                                        <td>{{ promotionA.idUser }} </td>
                                        <td>{{ promotionA.idPromo }} </td>
                                        <td><span class="label label-info label-mini">Due</span></td>
                                        <td>
                                            <a><button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button></a>
                                            <a href="{{ path('updateP', {'id':promotionA.id}) }}"> <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
                                            <a href="{{ path('deleteP',{'id':promotionA.id}) }}"><button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button></a>
                                        </td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                        <!-- /content-panel -->
                    </div>
                    <!-- /col-md-12 -->
                </div>
                <!-- /row -->
            </section>
        </section>
        <!-- /MAIN CONTENT -->
        <!--main content end-->
        <!--footer start-->
