{% extends 'base.html.twig' %}

{% block title %} Affecter Promotion{% endblock %}

{% block content %}
<section id="container">
    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Affecter des promotions</h3>

            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}

            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel">
                        <table class="table table-striped table-advance table-hover">
                            <div class="top-menu">
                                <ul class="nav pull-right top-menu" class="btn btn-primary btn-sm">
                                    <li>

                                        <tr>
                                            <td><b>  {{ form_label(form.delai,"Date Limite") }} </b> </td>
                                            <td><b>  {{ form_errors(form.delai) }} </b> </td>
                                            <td><b> {{ form_widget(form.delai) }}  </b> </td>
                                        </tr>

                                        <tr>
                                            <td><b>  {{ form_label(form.idUser,"User:") }} </b> </td>
                                            <td><b>  {{ form_errors(form.idUser) }} </b> </td>
                                            <td><b> {{ form_widget(form.idUser) }}  </b> </td>
                                        </tr>

                                        <tr>
                                            <td><b>  {{ form_label(form.idPromo,"Promotion:") }} </b> </td>
                                            <td><b>  {{ form_errors(form.idPromo) }} </b> </td>
                                            <td><b> {{ form_widget(form.idPromo) }}  </b> </td>
                                        </tr>
                                        <tr>
                                            <a   {{ form_row(form.submit, { 'label': 'Affecter Promotion' }) }} </a>
                                        </tr>

                        </table>



                    </div>

                    <!-- /content-panel -->
                </div>
                <!-- /col-md-12 -->
            </div>
            {{ form_end(form) }}
            <!-- /row -->
            </table>

            <!-- /row -->
        </section>
        <!-- /wrapper -->
    </section>

{% endblock %}


