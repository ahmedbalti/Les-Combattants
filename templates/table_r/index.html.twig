{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block content %}
    <section id="container">
        <section id="main-content">
            <section class="wrapper">
                <h3><i class="fa fa-angle-right"></i> Gérer les Club</h3>



                <div class="row mt">
                    <div class="col-md-12">
                        <div class="content-panel">
                            <table class="table table-striped table-advance table-hover">

                                <div class="top-menu">
                                    <ul class="nav pull-right top-menu" class="btn btn-primary btn-sm">
                                        <li>
                                            <a style="color: #f2f2f2;" class="btn btn-theme" href="{{ path('table_new',{'id':restaurent_id})}}">Ajouter</a>
                                        </li>
                                    </ul>
                                </div>
                                <br>
                                <br>
                                <br>
                                <hr>
                                <thead>
                                <tr>
                                    <th style="width: 10%" class="hidden-phone"><i class="fa fa-question-circle"></i> Numero</th>
                                    <th style="width: 15%"><i class="fa fa-bookmark"></i> Position</th>
                                    <th style="width: 15%"><i class=" fa fa-edit"></i> Forme</th>
                                    <th style="width: 15%"><i class=" fa fa-edit"></i> Type</th>
                                    <th style="width: 15%" ><i class=" fa  fa-file-image-o"></i> Image</th>
                                    <th style="width: 15%"><i class=" fa fa-edit"></i> Disponibilité</th>
                                    <th style="width: 15%"></th>
                                </tr>
                                </thead>
                                <tbody>

                                {%for table in tables %}
                                    <tr>
                                        <td class="hidden-phone">{{ table.numero }}</td>
                                        <td>{{ table.position }} </td>
                                        <td>{{ table.forme }} </td>
                                        <td>{{ table.type }} personnes</td>
                                        <td>
                                            <div class="fileupload-new thumbnail" >
                                                <img src="/img/{{ table.file }}" alt="" style="width: 200px; height: 100px;" />
                                            </div>
                                        </td>

                                        <td>


                                                {% if table.disponibilite %}

                                                    <a class="btn btn-success" href="{{ path('table_set_dispo',{'id':table.id}) }}">Dispo</a>
                                                    <a class="btn btn-default" href="{{ path('table_set_indispo',{'id':table.id}) }}">Indispo</a>

                                                {% elseif table.disponibilite == false %}

                                                    <a class="btn btn-default" href="{{ path('table_set_dispo',{'id':table.id}) }}">Dispo</a>
                                                    <a class="btn btn-danger" href="{{ path('table_set_indispo',{'id':table.id}) }}">Indispo</a>

                                                {% else %}

                                                    <a class="btn btn-default" href="{{ path('table_set_dispo',{'id':table.id}) }}">Dispo</a>
                                                    <a class="btn btn-default" href="{{ path('table_set_indispo',{'id':table.id}) }}">Indispo</a>

                                                {% endif %}

                                        </td>
                                        <td>
                                            <button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button>
                                            <a href="{{ path('table_edit',{'id':table.id}) }}"><button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
                                            <a href="{{ path('table_delete',{'id':table.id}) }}"> <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button> </a>
                                        </td>
                                    </tr>

                                {% endfor %}

                                </tbody>

                                <!-- /col-md-4-->
                                <div class="col-md-12">
                                    <div class="darkblue-panel pn">
                                        <div class="darkblue-header">
                                            <h5>Disponibilité des tables</h5>
                                        </div>
                                        <canvas id="serverstatus02" height="120" width="120"></canvas>
                                        <script>
                                            var doughnutData = [{
                                                value: {{ pourcentage_dispo }},
                                                color: "#5cb85c"
                                            },
                                                {
                                                    value: {{ pourcentage_nondispo }},
                                                    color: "#f68275"
                                                }
                                            ];
                                            var myDoughnut = new Chart(document.getElementById("serverstatus02").getContext("2d")).Doughnut(doughnutData);
                                        </script>
                                        <p>Répartition des tables</p>
                                        <footer>
                                            <div class="pull-left">
                                                <h5><button class="btn btn-danger btn-xs" style="color:#f68275;padding: 5px 5px;font-size: 12px;line-height: 1.5;border-radius: 3px;"></button>Non disponible</h5>
                                            </div>
                                            <div class="pull-right">
                                                <h5><button class="btn btn-success btn-xs" style="color:#f68275;padding: 5px 5px;font-size: 12px;line-height: 1.5;border-radius: 3px;"></button>Disponible</h5>
                                            </div>
                                        </footer>
                                    </div>
                                    <!--  /darkblue panel -->
                                </div>
                                <!-- /col-md-4 -->

                            </table>
                        </div>
                        <!-- /content-panel -->
                    </div>
                    <!-- /col-md-12 -->

                </div>
                <!-- /row -->
            </section>
        </section>
        <!-- /MAIN CONTENT -->
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                <p>
                    <strong></strong>
                </p>
