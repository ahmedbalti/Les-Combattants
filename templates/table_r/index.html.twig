{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block content %}
    <section id="container">
        <section id="main-content">
            <section class="wrapper">
                <h3><i class="fa fa-angle-right"></i> Gérer les Club</h3>



                <div class="row mt">
                    <div class="col-md-12">
                        <div class="content-panel">
                            <table class="table table-striped table-advance table-hover">

                                <div class="top-menu">
                                    <ul class="nav pull-right top-menu" class="btn btn-primary btn-sm">
                                        <li>
                                            <a style="color: #f2f2f2;" class="btn btn-theme" href="{{ path('table_new')}}">Ajouter</a>
                                        </li>
                                    </ul>
                                </div>
                                <br>
                                <br>
                                <br>
                                <hr>
                                <thead>
                                <tr>
                                    <th style="width: 10%" class="hidden-phone"><i class="fa fa-question-circle"></i> Numero</th>
                                    <th style="width: 15%"><i class="fa fa-bookmark"></i> Position</th>
                                    <th style="width: 15%"><i class=" fa fa-edit"></i> Forme</th>
                                    <th style="width: 15%"><i class=" fa fa-edit"></i> Type</th>
                                    <th style="width: 15%" ><i class=" fa fa-edit"></i> Image</th>
                                    <th style="width: 15%"><i class=" fa fa-edit"></i> Disponibilité</th>
                                    <th style="width: 15%"></th>
                                </tr>
                                </thead>
                                <tbody>

                                {%for table in tables %}
                                    <tr>
                                        <td class="hidden-phone">{{ table.numero }}</td>
                                        <td>{{ table.position }} </td>
                                        <td>{{ table.forme }} </td>
                                        <td>{{ table.type }} personnes </td>

                                        <td>
                                            <div class="fileupload-new thumbnail" >
                                                <img src="/img/{{ table.file }}" alt="" style="width: 200px; height: 100px;" />
                                            </div>
                                        </td>

                                        <td>
                                            <div class="btn-group btn-toggle" data-toggle="buttons">

                                                {% if table.disponibilite %}
                                                    <label class="btn btn-success">
                                                        <input type="radio" name="options" value="option1" checked=""> On
                                                    </label>
                                                    <label class="btn btn-default active">
                                                        <input type="radio" name="options" value="option2" > Off
                                                    </label>
                                                {% elseif table.disponibilite == false %}
                                                    <label class="btn btn-default">
                                                        <input type="radio" name="options" value="option1" checked=""> On
                                                    </label>
                                                    <label class="btn btn-danger active">
                                                        <input type="radio" name="options" value="option2" > Off
                                                    </label>
                                                {% else %}
                                                    <label class="btn btn-default">
                                                        <input type="radio" name="options" value="option1" checked=""> On
                                                    </label>
                                                    <label class="btn btn-default active">
                                                        <input type="radio" name="options" value="option2" > Off
                                                    </label>
                                                {% endif %}
                                            </div>
                                        </td>
                                        <td>
                                            <button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button>
                                            <a href="{{ path('table_edit',{'id':table.id}) }}"><button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
                                            <a href="{{ path('table_delete',{'id':table.id}) }}"> <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button> </a>
                                        </td>
                                    </tr>

                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                        <!-- /content-panel -->
                    </div>
                    <!-- /col-md-12 -->
                </div>
                <!-- /row -->
            </section>
        </section>
        <!-- /MAIN CONTENT -->
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                <p>
                    <strong></strong>
                </p>
                <div class="credits">
