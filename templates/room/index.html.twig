{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block content %}
    <section id="container">
        <section id="main-content">
            <section class="wrapper">
                <h3><i class="fa fa-angle-right"></i> Gérer les Chambres</h3>



                <div class="row mt">
                    <div class="col-md-12">
                        <div class="content-panel">
                            <table class="table table-striped table-advance table-hover">

                                <div class="top-menu">
                                    <ul class="nav pull-right top-menu" class="btn btn-primary btn-sm">
                                        <li>
                                            <a style="color: #f2f2f2;" class="btn btn-primary" href="{{ path('room_new',{'id':hebergement_id})}}">Add Room</a>
                                        </li>
                                    </ul>
                                </div>
                                <br>
                                <br>
                                <br>
                                <hr>
                                <thead>
                                <tr>

                                    <th style="width: 7%"><i class="fa fa-bookmark"></i> Number</th>
                                    <th style="width: 6%"><i class=" fa fa-edit"></i> Etage</th>
                                    <th style="width: 8%"><i class=" fa fa-edit"></i> Beds Number</th>
                                    <th style="width: 6%"><i class="fa fa-bookmark"></i> Price</th>
                                    <th style="width: 10%"><i class=" fa fa-edit"></i> Emplacement</th>
                                    <th style="width: 15%"><i class=" fa fa-edit"></i> Description</th>
                                    <th style="width: 10%"><i class=" fa fa-edit"></i> Type</th>
                                    <th style="width: 13%" ><i class=" fa  fa-file-image-o"></i> Image</th>
                                    <th style="width: 16%"><i class=" fa fa-edit"></i> Disponibilité</th>
                                    <th style="width: 20%">Actions</th>
                                </tr>
                                </thead>
                                <tbody>

                                {%for room in rooms %}
                                    <tr>
                                        <td class="hidden-phone">{{ room.Number }}</td>
                                        <td>{{ room.Etage }} </td>
                                        <td>{{ room.NbLit }} </td>
                                        <td>{{ room.Price }} </td>
                                        <td>{{ room.Emplacement}} </td>
                                        <td>{{ room.Description}} </td>
                                        <td>{{ room.Type }} </td>
                                        <td>
                                            <div class="fileupload-new thumbnail" >
                                                <img src="/img/{{ room.file }}" alt="" style="width: 200px; height: 100px;" />
                                            </div>
                                        </td>

                                        <td>


                                            {% if room.disponibilite %}

                                                <a class="btn btn-success" href="{{ path('room_set_dispo',{'id':room.id}) }}">Dispo</a>
                                                <a class="btn btn-default" href="{{ path('room_set_indispo',{'id':room.id}) }}">Nondispo</a>

                                            {% elseif room.disponibilite == false %}

                                                <a class="btn btn-default" href="{{ path('room_set_dispo',{'id':room.id}) }}">Dispo</a>
                                                <a class="btn btn-danger" href="{{ path('room_set_indispo',{'id':room.id}) }}">Nondispo</a>

                                            {% else %}

                                                <a class="btn btn-default" href="{{ path('room_set_dispo',{'id':room.id}) }}">Dispo</a>
                                                <a class="btn btn-default" href="{{ path('room_set_indispo',{'id':room.id}) }}">Nondispo</a>

                                            {% endif %}

                                        </td>
                                        <td>
                                            <button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button>
                                            <a href="{{ path('room_edit',{'id':room.id}) }}"><button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
                                            <a href="{{ path('room_delete',{'id':room.id}) }}"> <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button> </a>
                                        </td>
                                    </tr>

                                {% endfor %}

                                </tbody>





                                        <!-- /col-md-4-->
                                <div class="col-md-12">
                                    <div class="darkblue-panel pn">
                                        <div class="darkblue-header">
                                            <h5>Disponibilité des Chambres</h5>
                                        </div>
                                        <canvas id="serverstatus02" height="120" width="120"></canvas>
                                        <script>
                                            var doughnutData = [{
                                                value: {{ pourcentage_dispo }},
                                                color: "#5cb85c"
                                            },
                                                {
                                                    value: {{ pourcentage_nondispo }},
                                                    color: "#f68275"
                                                }
                                            ];
                                            var myDoughnut = new Chart(document.getElementById("serverstatus02").getContext("2d")).Doughnut(doughnutData);
                                        </script>
                                        <p></p>
                                        <footer>
                                            <div class="pull-left">
                                                <h5><button class="btn btn-danger btn-xs" style="color:#f68275;padding: 5px 5px;font-size: 12px;line-height: 1.5;border-radius: 3px;"></button>Non disponible</h5>
                                            </div>
                                            <div class="pull-right">
                                                <h5><button class="btn btn-success btn-xs" style="color:#f68275;padding: 5px 5px;font-size: 12px;line-height: 1.5;border-radius: 3px;"></button>Disponible</h5>
                                            </div>
                                        </footer>
                                    </div>
                                    <!--  /darkblue panel -->
                                </div>
                                <!-- /col-md-4 -->

                            </table>
                        </div>
                        <!-- /content-panel -->
                    </div>
                    <!-- /col-md-12 -->

                </div>
                <!-- /row -->
            </section>
        </section>
        <!-- /MAIN CONTENT -->
        <!--main content end-->
        <!--footer start-->
