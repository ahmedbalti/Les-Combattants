{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block content %}
    <section id="container">
        <section id="main-content">
            <section class="wrapper">
                <h3><i class="fa fa-angle-right"></i> Gérer les évenements</h3>

                <ul>
                    <form method="post" action="{{ path('searchEvent') }}">
                        <label>Search</label>
                        <input type="text" name="search">
                        <input type="submit" value="Search" class="btn btn-primary" >

                    </form>
                </ul>
                <div class="row mt">
                    <div class="col-md-12">
                        <div class="content-panel">
                            <table class="table table-striped table-advance table-hover">
                                <h4><i class="fa fa-angle-right"></i> Advanced Table</h4>
                                <div class="top-menu">
                                    <ul class="nav pull-right top-menu" class="btn btn-primary btn-sm">
                                        <li>



                                            <a class="logout"  href={{ path('new_event') }}>Ajouter Evenementt</a>
                                        </li>
                                    </ul>
                                    <ul class="nav pull-right top-menu" class="btn btn-primary btn-sm">
                                        <li>



                                            <a class="logout"  href={{ path('ReservationList') }}>Voir les reservation</a>
                                        </li>
                                    </ul>
                                </div>
                                <br>
                                <br>
                                <br>
                                <hr>
                                <thead>
                                <tr>
                                    <th><i class="fa fa-bullhorn"></i> ID</th>
                                    <th class="hidden-phone"><i class="fa fa-question-circle"></i> Nom</th>
                                    <th><i class="fa fa-bookmark"></i> Date</th>
                                    <th><i class=" fa fa-edit"></i> type</th>
                                    <th><i class=" fa fa-edit"></i> Description</th>
                                    <th><i class=" fa fa-edit"></i> lieuid</th>

                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for event in events %}
                                <tr>
                                    <td>
                                        <a href={{ path('showEventlieu',{'id':event.id}) }}>{{ event.id }}</a>
                                    </td>
                                    <td>{{ event.nom}}</td>
                                    <td>{{ event.date|date('Y-m-d') }}</td>
                                    <td>{{ event.type }} </td>
                                    <td>{{ event.description }}</td>
                                    <td>{{ event.lieuid }} </td>


                                    <td>
                                        <button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button>
                                        <a href={{ path('updateEvent',{'id':event.id}) }}> <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                                        <a href="{{ path('deleteEvent',{'id':event.id}) }}"> <button class="btn btn-danger btn-xs">    <i class="fa fa-trash-o "></i></button></a>
                                    </td>
                                </tr>

                                    <div class="centered mt">

                                    </div>
                                {% endfor %}






                                </tbody>
                            </table>
                            {{ knp_pagination_render(events) }}
                        </div>
                        <!-- /content-panel -->
                    </div>
                    <!-- /col-md-12 -->
                </div>
                <!-- /row -->
            </section>
        </section>
        <!-- /MAIN CONTENT -->
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                <p>
                    <strong></strong>
                </p>
