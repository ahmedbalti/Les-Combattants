{% extends 'baseFront.html.twig' %}

{% block title %}Hebergemement Homes{% endblock %}

{% block content %}

    <div class="hero-wrap" style="background-image: url({{ asset('front/images/bg_3.jpg') }});">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text d-flex align-itemd-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                    <div class="text">
                        <p class="breadcrumbs mb-2"><span class="mr-2"><a href="">Home</a></span>  <span><a href="{{ path('hotelList_index') }}">Hotel</a></span>  <span><a href="{{ path('homeList_index') }}">Maison d'hote</a> </span></p>
                        <h1 class="mb-4 bread"></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="ftco-section ftco-no-pb ftco-room">
        <div class="container-fluid px-0">
            <div class="row no-gutters justify-content-center mb-5 pb-3">
                <div class="col-md-7 heading-section text-center ftco-animate">
                    <span class="subheading">Plusieurs offres</span>
                    <h2 class="mb-4">Pour choisir</h2>
                </div>
            </div>

            <div class="row no-gutters">
                {%for home in homes %}
                    <div class="col-lg-6">
                        <div class="room-wrap d-md-flex ftco-animate">
                            <a href="#" class="img" style="background-image: url('/img/{{ home.file }}');"></a>
                            <div class="half left-arrow d-flex align-items-center">
                                <div class="text p-4 text-center">
                                    <p class="star mb-0"><span class="ion-ios-star"></span><span class="ion-ios-star"></span><span class="ion-ios-star"></span><span class="ion-ios-star"></span><span class="ion-ios-star"></span></p>
                                    <h3 class="mb-3"><a href="Hebergement.html" ><td>{{ home.Name }}</td></a></h3>
                                    <p class="mb-3"><span class="per">Address : </span> <td>{{ home.Address }}</td></p>
                                    <p class="pt-1"><a href="{{ path('roomlist_index') }}" class="btn-custom px-3 py-2 rounded">View Details <span class="icon-long-arrow-right"></span></a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        </div>
        </div>
        </div>
    </section>


{% endblock %}
