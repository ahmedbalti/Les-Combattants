{% extends 'base.html.twig' %}

{% block title %}Hotels{% endblock %}

{% block content %}
    <section id="container">
        <section id="main-content">
            <section class="wrapper">
                <h3><i class="fa fa-angle-right"></i> GÃ©rer les Hotels</h3>


                <div class="row mt">
                    <div class="col-md-12">
                        <div class="content-panel">
                            <table class="table table-striped table-advance table-hover">

                                <div class="top-menu">
                                    <ul class="nav pull-right top-menu">
                                        <li>
                                            <a style="color: #f2f2f2;" class="btn btn-primary" href="{{ path('hotel_new') }}">Add Hotel</a>

                                        </li>
                                        <li>
                                            <form class="pull-right hidden" role="search" id="nav-search-form" method="post">
                                                <div class="input-append">
                                                    <input name ="search" id="search" type="text" class="form-control " placeholder="Search">
                                                </div>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                                <br>
                                <br>
                                <br>
                                <hr>
                                <thead>
                                <tr>
                                    <th><i class="fa fa-bullhorn"></i> Nameeee</th>
                                    <th class="hidden-phone"><i class="fa fa-question-circle"></i> Stars Number</th>
                                    <th><i class="fa fa-bookmark"></i> Rooms Number</th>
                                    <th><i class=" fa fa-edit"></i> Address</th>
                                    <th><i class=" fa fa-edit"></i> Description</th>
                                    <th><i class="fa fa-bullhorn"></i> Image</th>
                                    <th><i class=" fa fa-edit"></i> Actions</th>
                                    <th style="width: 10%"></th>
                                </tr>
                                </thead>
                                <tbody id="hotelsHtml">
                                <!--affichage des hotelss-->
                                {%for hotel in hotels %}
                                    <tr>
                                        <td class="hidden-phone">{{ hotel.Name }}</td>
                                        <td>{{ hotel.NbStars }}</td>
                                        <td>{{ hotel.NbRooms }}</td>
                                        <td>{{ hotel.Address }}</td>
                                        <td>{{ hotel.Description }}</td>


                                        <td>
                                            <div class="fileupload-new thumbnail" >
                                                <img src="/img/{{ hotel.file }}" alt="" style="width: 200px; height: 100px;" />
                                            </div>
                                        </td>
                                        <td>
                                            <a href="{{ path('room_r',{'id':hotel.id}) }}"><button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button></a>
                                            <a href="{{ path('hotel_edit',{'id':hotel.id}) }}"><button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
                                            <a href="{{ path('hotel_delete',{'id':hotel.id}) }}" onclick="return confirm('Etes vous sur de supprimer cet article')"><button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button></a>
                                        </td>
                                    </tr>

                                {% endfor %}

                                </tbody>
                            </table>

                            <div class="centered mt">
                                {{ knp_pagination_render(hotels) }}
                            </div>

                        </div>
                        <!-- /content-panel -->
                    </div>
                    <!-- /col-md-12 -->
                </div>
                <!-- /row -->
            </section>
        </section>









        <!-- /MAIN CONTENT -->
