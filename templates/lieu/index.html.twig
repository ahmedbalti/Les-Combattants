{% extends 'base.html.twig' %}

{% block title %}Lieu{% endblock %}

{% block content %}
    <section id="container">
        <section id="main-content">
            <section class="wrapper">
                <h3><i class="fa fa-angle-right"></i> Gérer les lieux</h3>


                <div class="row mt">
                    <div class="col-md-12">
                        <div class="content-panel">
                            <table class="table table-striped table-advance table-hover">
                                <h4><i class="fa fa-angle-right"></i> Advanced Table</h4>
                                <div class="top-menu">
                                    <ul class="nav pull-right top-menu" class="btn btn-primary btn-sm">
                                        <li>



                                            <a class="logout"  href={{ path('new_Lieu') }}>Add Lieu</a>
                                        </li>
                                    </ul>
                                </div>
                                <br>
                                <br>
                                <br>
                                <hr>
                                <thead>
                                <tr>
                                    <th><i class="fa fa-bullhorn"></i> ID</th>
                                    <th class="hidden-phone"><i class="fa fa-question-circle"></i> Nom</th>
                                    <th><i class="fa fa-bookmark"></i> Ville</th>
                                    <th><i class=" fa fa-edit"></i> Capacité</th>
                                    <th><i class=" fa fa-edit"></i> Adresse</th>



                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for Lieu in Lieux %}
                                <tr>
                                    <td>
                                        <a >{{ Lieu.id }}</a>
                                    </td>
                                    <td>{{ Lieu.nom}}</td>
                                    <td>{{ Lieu.ville }}</td>
                                    <td>{{ Lieu.capacite }} </td>
                                    <td>{{ Lieu.adresse }} </td>



                                    <td>
                                        <button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button>
                                        <a href={{ path('updateLieu',{'id':Lieu.id}) }}> <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                                        <a href="{{ path('deleteLieu',{'id':Lieu.id}) }}"> <button class="btn btn-danger btn-xs">    <i class="fa fa-trash-o "></i></button></a>
                                    </td>
                                </tr>
                                {% endfor %}






                                </tbody>
                            </table>
                        </div>
                        <!-- /content-panel -->
                    </div>
                    <!-- /col-md-12 -->
                </div>
                <!-- /row -->
            </section>
        </section>
        <!-- /MAIN CONTENT -->
